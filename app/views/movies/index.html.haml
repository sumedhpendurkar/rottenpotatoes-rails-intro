-#  This file is app/views/movies/index.html.haml
%h2 All Movies

%table#movies.table.table-striped.col-md-12
  %thead
    %tr
      %th{:class=> ('hilite' if @sort_var == "title")}=link_to 'Movie Title', movies_path(:sort_field=>'title', :ratings=>@set_ratings), :id => 'title_header'
      %th Rating
      %th{:class => ('hilite' if @sort_var == "release_date")}=link_to 'Release Date', movies_path(:sort_field=>'release_date', :ratings=>@set_ratings), :id => 'release_date_header'
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
